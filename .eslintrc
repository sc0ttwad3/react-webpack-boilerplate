{
  /* https://medium.com/@dan_abramov/lint-like-it-s-2015-6987d44c5b48 */
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "plugins": [
    "lodash-fp",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "sourceType": "module",
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": true
  },
  "rules": {
    "strict": 0,
    "bitwise": 0,
    "curly": 0,
    "eqeqeq": 0,
    "camelcase": 0,
    "dot-notation": 0,
    "eol-last": 0,
    "no-console": 0,
    "no-mixed-requires": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-undef": 2,
    "no-undef-init": 0,
    "no-extra-strict": 0,
    "no-unused-vars": 0,
    "no-loop-func": 0,
    "comma-spacing": 0,
    "quotes": 0,
    "space-infix-ops": 0,
    "keyword-spacing": 0,
    "semi-spacing": 0,
    "no-trailing-spaces": 1,
    "no-multi-spaces": 0,
    "no-mixed-spaces-and-tabs": 0,

    "lodash-fp/consistent-compose": "off",
    "lodash-fp/consistent-name": ["error", "_"],
    "lodash-fp/no-argumentless-calls": "error",
    "lodash-fp/no-chain": "error",
    "lodash-fp/no-extraneous-args": "error",
    "lodash-fp/no-extraneous-function-wrapping": "error",
    "lodash-fp/no-extraneous-iteratee-args": "error",
    "lodash-fp/no-for-each": "off",
    "lodash-fp/no-single-composition": "error",
    "lodash-fp/no-submodule-destructuring": "error",
    "lodash-fp/no-unused-result": "off",
    "lodash-fp/prefer-compact": "error",
    "lodash-fp/prefer-composition-grouping": "error",
    "lodash-fp/prefer-constant": ["error", {"arrowFunctions": false}],
    "lodash-fp/prefer-flat-map": "error",
    "lodash-fp/prefer-get": "error",
    "lodash-fp/prefer-identity": ["error", {"arrowFunctions": false}],
    "lodash-fp/preferred-alias": "off",
    "lodash-fp/use-fp": "error",

    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"]
  },
  "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
  },
  "globals": {
    "Rx",
    "debug",
    "__DEV__": true
  }
}
